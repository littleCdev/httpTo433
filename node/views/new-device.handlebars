<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s6">
                <label>Type</label>
                <select class="browser-default" id="selectDevice">
                    {{#each Devices}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col s12">
                <div class="input-field col s6">
                    <input placeholder="Placeholder" id="devicename" type="text">
                    <label for="devicename">Device name</label>
                </div>
            </div>
            <div class="col s12 right">
                <button class="btn-flat blue right" id="saveNewDevice">Save</button>
            </div>
        </div>
    </div>
    <br><br>
</div>
